#/bin/bash
cd "$0"/..
npm install
cp -r ./node_modules ./dist/macos/node_modules
cp -r ./utils ./dist/macos/utils
cp -r ./LICENSE ./dist/macos/LICENSE
cp ./mac_script.sh ./dist/macos/notion-pdf-export
rm ./dist/macos/node_modules/phantomjs-prebuilt/lib/phantom/bin/phantomjs
rm ./dist/macos/utils/wkhtmltopdf/wkhtmltopdf.exe
rm ./dist/macos/utils/wkhtmltopdf/wkhtmltox.dll
rm ./dist/macos/utils/markdown-pdf/phantomjs.exe
chmod +x ./dist/macos/notion-pdf-export
nexe . -t macos-10.13.0 -o ./dist/macos/npe