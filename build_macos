#/bin/bash
cd "$0"/..
npm install
cp -r ./node_modules ./dist/macos/node_modules
cp -r ./markdown-pdf ./dist/macos/markdown-pdf
cp -r ./LICENSE ./dist/macos/LICENSE
mv ./dist/macos/node_modules/phantomjs-prebuilt/lib/phantom/bin/phantomjs ./dist/macos/markdown-pdf/phantomjs
cp ./mac_script.sh ./dist/macos/notion-pdf-exporter
chmod +x ./dist/macos/notion-pdf-export
nexe . -t macos-10.13.0 -o ./dist/macos/npe